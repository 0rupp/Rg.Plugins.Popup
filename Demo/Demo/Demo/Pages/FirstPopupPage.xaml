<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             x:Class="Demo.Pages.FirstPopupPage">
  <Frame BackgroundColor="Silver" VerticalOptions="Center" HorizontalOptions="Center">
      <StackLayout>
        <Label Text="First Popup Page" TextColor="White" FontSize="16" HorizontalOptions="Center"></Label>
        <Button Text="Open Second Popup" Clicked="OnOpenSecond"></Button>
        <Button Text="Close" Clicked="OnClose"></Button>
      </StackLayout>
    </Frame>
</pages:PopupPage>